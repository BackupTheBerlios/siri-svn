	    <service ype="file-file" id="c2k-syntegra" createuniquename="false">
	        <infolder>
	        	<path>C:/tradevision/iris/services/c2k-syntegra/in/</path>
				<intervall>2000</intervall>
				<skipfirstblankline>false</skipfirstblankline>
			</infolder>
			<outfolder>
	        		<path>C:/tradevision/iris/services/c2kxmlemail-email/in/</path>
	        	</outfolder>
			<backup backuphandleron="true" archiveron="true">
				<backupfoldername>C:/tradevision/iris/services/c2k-syntegra/backup/</backupfoldername>
				<archivefoldername>C:/tradevision/iris/services/c2k-syntegra/archived/</archivefoldername>
			</backup>
			<transform transformon="true">
				<transformfile transformmessage="c2kmup">C:/tradevision/iris/services/c2k-syntegra/transform/c2kmup_to_email.xsl</transformfile>
				<transformfile transformmessage="c2krmp">C:/tradevision/iris/services/c2k-syntegra/transform/c2krmp_to_email.xsl</transformfile>

			</transform>
			<error errorhandleron="false">
				<errorfoldername>C:/tradevision/iris/services/c2k-syntegra/error/</errorfoldername>
				<resendintervall>600000</resendintervall>
				<sortonresend>false</sortonresend>
			</error>
			<service>
	        		<nameservice>C:/tradevision/iris/conf/tdv_gen.ior</nameservice>
				<name>TDVMessengerReceiver</name>
				<method>handleMessage</method>
				<paramtype>String</paramtype>
			</service>
			<logging>
				<appendertype type="RollingFileAppender">
					<maxfilesize>100KB</maxfilesize>
					<maxbackupindex>10</maxbackupindex>
				</appendertype>
				<logpattern>%d{yyyy-MM-dd HH:mm:ss};%p;%t;%x;%m;%n</logpattern>
				<logfolder>C:/tradevision/iris/services/c2k-syntegra/log/</logfolder>
			</logging>
    </service>


</system-config>
