<?xml version="1.0" encoding="utf-8"?>
<system-config name="iris" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="C:/gepo/mycvsprojects/iris/modules/xml-binding/src/schema/iris.xsd">
    <global-settings>
        <archivehandler>
            <cronintervall>Every 5 minute@0 1 * * * ?</cronintervall>
        </archivehandler>
        <emailserversettings sendintervallInMilliSeconds="10000" >
            <smtp>
                <smtpserver id="1">tdvmail111</smtpserver>
                <smtpserver id="2">tdvms0111</smtpserver>
            </smtp>
            <pop>
                <popserver id="1">ccc</popserver>
                <popserver id="2">vvvv</popserver>
            </pop>
            <imap>
                <imapserver id="1">eerer</imapserver >
                <imapserver id="2">dfsdfsdfs</imapserver>
            </imap>
        </emailserversettings>
        <servicerootpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/</servicerootpath>
    </global-settings>

    <service type="file-email" id="fileemailtest" createuniquename="true" usesrelativerootpath="false">
        <infolder>
            <infolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/in/</infolderpath>
            <intervallInMilliSeconds>5000</intervallInMilliSeconds>
            <skipfirstblankline>false</skipfirstblankline>
            <infoldersendchunks sendinfolderchunkson="false">
                <infolderchunksize>5</infolderchunksize>
                <infolderchunkthreshold>10</infolderchunkthreshold>
            </infoldersendchunks>
        </infolder>
        <emailsettings>
            <emailbatchsize>10</emailbatchsize>
            <emailsendintervallInMilliSeconds>10000</emailsendintervallInMilliSeconds>
        </emailsettings>
        <backup backuphandleron="true" archiveron="true">
            <backupfolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/backup/</backupfolderpath>
            <archivefolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/archived/</archivefolderpath>
        </backup>
        <transform transformon="false">
            <transformfile transformmessage="c2kmup">C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/transform/c2kmup_to_email.xsl</transformfile>
            <transformfile transformmessage="c2krmp">C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/transform/c2krmp_to_email.xsl</transformfile>
        </transform>
        <error errorhandleron="false">
            <errorfolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/error/</errorfolderpath>
            <errorinfofolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/error_info/</errorinfofolderpath>
            <sortonresend>false</sortonresend>
            <cronintervall>Every 1 minute@0/60 * * * * ?</cronintervall>
            <errornotification errornotificationon="true" >
                <notifyeveryintervallInMilliSeconds>10000</notifyeveryintervallInMilliSeconds>
                <numberoferrors>1</numberoferrors>
                <emailnotification>
                    <emailonfailure>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/down.xml</emailonfailure>
                </emailnotification>
                <sms>
                    <smsonfailure>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/template/down.xml</smsonfailure>
                    <smsservice>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/in/dd.txt</smsservice>
                </sms>
            </errornotification>
        </error>
        <inactivity inactivityOn="true">
            <maxInactivityPeriodInMilliSeconds>120000</maxInactivityPeriodInMilliSeconds>
            <emailOnInactivity>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/template/erroronincativity.xml</emailOnInactivity>
        </inactivity>
        <applicationlogger>
			<appender type="RollingFileAppender">
				<maxfilesize>100KB</maxfilesize>
				<maxbackupindex>10</maxbackupindex>
			</appender>
			<logpattern>%d{yyyy-MM-dd HH:mm:ss};%p;%t;%x;%m;%n</logpattern>
			<logfolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/log/</logfolderpath>
            <loglevel>DEBUG</loglevel>
		</applicationlogger>
		<messagelogger>
			<appender type="DailyRollingFileAppender">
				<rollingschedule>'.'yyyy-MM-dd-a</rollingschedule>
			</appender>
			<logpattern>%d{yyyy-MM-dd HH:mm:ss};%p;%t;%x;%m;%n</logpattern>
			<logfolderpath>C:/gepo/mycvsprojects/iris/modules/core-server/services-test/fileToEmail/log/</logfolderpath>
            <loglevel>DEBUG</loglevel>
		</messagelogger>
    </service>
</system-config>
