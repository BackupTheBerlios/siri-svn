    <!--+
    | Build the project
    +-->
    <build>
        <nagEmailAddress>gep01</nagEmailAddress>
        <sourceDirectory>
            ${basedir}/src/java
        </sourceDirectory>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <directory>${basedir}/target/jaxb-generated</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.ser</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/java/pics</directory>
                <targetPath>pics</targetPath>
                <includes>
                    <include>**/*.gif</include>
                    <include>**/*.jpg</include>
                    <include>**/*.jpeg</include>
                    <include>**/*.png</include>
                </includes>
            </resource>
        </resources>
    </build>

